#!/usr/bin/env ruby

require 'pathname'
require 'readline'

ROOT = Pathname(__FILE__).dirname.parent

$:.unshift(ROOT.join('lib'))

require 'ruby_lisp'

$l=RubyLisp::Core.new
histfile = Pathname('~/.ruby-lisp-history').expand_path
if histfile.exist?
  histfile.read.split("\n").each do |l|
    Readline::HISTORY.push l
  end
end

$l.exec(File.read(ROOT.join('lib/bootstrap.rl')))

if ARGV.any?
  $l.exec(File.read(Pathname(ARGV.first).expand_path))
else

  begin
    loop do
      code = Readline::readline '>> '
      Readline::HISTORY.push code
      begin
        puts $l.exec(code).inspect
      rescue => e
        puts e
        puts e.backtrace
      end
    end
  ensure
    histfile.write(Readline::HISTORY.to_a.join("\n"))
  end

end
